<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'layouts/user_info', book_user: @user, book: @newbook, user: @user %>
        </div>
        
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@user.id) do %>
                                <%= image_tag @book.user.get_profile_image(100,100) %>
                                <br />
                                <%= @user.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book_path(@book.id) do %>
                                <%= @book.title %>
                            <% end %>
                        </td>
                        <td><%= @book.body %></td>
                        <% if @book.user == current_user %>
                        <td>
                            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
                        </td>
                        <td>
                            <%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete, method: :delete, "data-confirm" => "本当に消しますか？" %>
                        </td>
                        <% else %>
                        <td></td>
                        <td></td>
                        <% end %>
                         
                <!--いいね-->
                        <% if @book.favorited_by?(current_user) %>
                        <th>
                            <%= link_to book_favorites_path(@book), class:"heart_blue", method: :delete do %>
                            <i class="fas fa-heart" style="color:red;"></i>
                        <% end %>
                    
                           <%= @book.favorites.count %> 
                        </th>
                    
                        <% else %>
                        <th>
                            <%= link_to book_favorites_path(@book), class:"heart_red", method: :post do %>
                            <i class="fas fa-heart" ></i>
                        <% end %>
                           <%= @book.favorites.count %> </th>
                        </th>
                        <% end %>
                <!--いいね-->
                   
                   
            
                        <%= @book.book_comments.count %>件コメント
               
                        </tr>
               
                            <% @book.book_comments.each do |book_comment| %>
                        <tr>
                            <td>
                                <%= image_tag @book.user.get_profile_image(50,50) %>
                            </td>
                            <td>
                                <%= book_comment.user.name %>
                            </td>
                            <td><%= book_comment.comment %>
                                    <% if book_comment.user == current_user %>
                                        <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, class: "btn btn-danger" %>
                                    <% end %>
                            </td>
                                      
                        </tr>            
                      <% end %>
                  
                </tbody>
            </table>

                  <%= form_with model: [@book, @book_comment] do |f| %>
                    <div class="row">
                        <div class="col-sm-12">
                            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
                        </div>
                    </div>
                    <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
                  <% end %>
                     
                <!-- ここまで -->
	    </div>
        
    </div>
</div>